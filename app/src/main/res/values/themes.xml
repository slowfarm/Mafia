<resources>

    <style name="Base.Theme.Mafia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#E8DEF8</item>
        <item name="colorPrimaryVariant">#4F378A</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>

    </style>

    <style name="Theme.Mafia" parent="Base.Theme.Mafia" />

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:elevation">@dimen/dp0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="textAllCaps">false</item>

        <item name="android:minHeight">@dimen/material_button_min_height</item>
        <item name="android:minWidth">@dimen/material_button_min_width</item>
        <item name="android:paddingStart">@dimen/material_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/material_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/material_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/material_button_padding_vertical</item>

        <item name="android:insetTop">@dimen/dp0</item>
        <item name="android:insetBottom">@dimen/dp0</item>

    </style>

    <style name="ButtonStyle.Variant">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>

    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:background">@drawable/background_fouls_view</item>
        <item name="android:gravity">center</item>

        <item name="android:minHeight">@dimen/material_button_min_height</item>
        <item name="android:minWidth">@dimen/material_button_min_width</item>
        <item name="android:paddingStart">@dimen/material_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/material_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/material_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/material_button_padding_vertical</item>

    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">?attr/colorPrimaryVariant</item>

        <item name="android:minWidth">@dimen/dp24</item>
        <item name="android:minHeight">@dimen/dp24</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.CheckBoxStyle</item>

    </style>

    <style name="ThemeOverlay.CheckBoxStyle" parent="">
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSurface">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">?attr/colorPrimaryVariant</item>

    </style>

</resources>